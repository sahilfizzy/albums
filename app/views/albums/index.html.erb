<h1>Listing albums</h1>

<table>
  <thead>
    <tr>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <table class="table table-hover">
    <% @albums.each do |album| %>
      <tr>
        <td><h2><%= link_to album.name, album %></h2></td>
       
      </tr>
    <% end %>
  </table>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Album', new_album_path, class: "btn btn-default", class: "btn btn-primary btn-lg" %>
<% end %>
